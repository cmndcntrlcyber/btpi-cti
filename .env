# BTPI-CTI Environment Configuration
COMPOSE_PROJECT_NAME=btpi_cti
NETWORK=cti-network

# Build Tags
TAG=latest

# Default Ports (override in CI or dev with allocate_ports.sh)
# Portainer
PORTAINER_PORT=9010
PORTAINER_AGENT_PORT=9000
PORTAINER_HTTPS_PORT=9443

# GRR Rapid Response
GRR_ADMIN_UI_PORT=8001
GRR_DB_PORT=3306

# TheHive & Components
THEHIVE_PORT=9000
CORTEX_PORT=9001
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_NODES_PORT=9300
CASSANDRA_PORT=9042
MINIO_PORT=10000
MINIO_CONSOLE_PORT=9090

# MISP & Components
MISP_HTTP_PORT=8083
MISP_HTTPS_PORT=8443

# Integration API
INTEGRATION_API_PORT=8888

# Resource Limits
ELASTICSEARCH_MEM_LIMIT=2048m
ELASTICSEARCH_JVM_HEAP=1g
CASSANDRA_MEM_LIMIT=2048m
CASSANDRA_MAX_HEAP_SIZE=1024M
CASSANDRA_HEAP_NEWSIZE=1024M
THEHIVE_MEM_LIMIT=2048m
THEHIVE_JVM_HEAP=1536M
MINIO_MEM_LIMIT=1024m
